{
  "name": "vera-ui",
  "version": "1.0.0",
  "private": true,
  "description": "Vera UI workspace with component library and documentation",
  "scripts": {
    "dev": "pnpm --parallel --recursive dev",
    "build": "pnpm --recursive build",
    "dev:ui": "pnpm --filter @helgadigitals/vera-ui dev",
    "dev:docs": "pnpm --filter docs dev",
    "build:ui": "pnpm --filter @helgadigitals/vera-ui build",
    "build:docs": "pnpm --filter docs build",
    "lint": "pnpm --recursive lint",
    "test": "pnpm --recursive test"
  },
  "devDependencies": {
    "typescript": "~5.8.3"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
